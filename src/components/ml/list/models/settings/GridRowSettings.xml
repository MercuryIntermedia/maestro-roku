<?xml version='1.0' encoding='utf-8'?>
<component
    name='ml_GridRowSettings'
    extends='ml_RowSettings'>
  <interface>
    <field
        id='numColumns'
        type='integer'
        value='3' />

    <!-- number of rows to show on the screen, before scrolling starts -->
    <field
        id='numRows'
        type='integer'
        value='2' />
    <!-- height of each row -->
    <field
        id='rowHeight'
        type='integer'
        value='-1' />
    <field
        id='firstRowScreenPos'
        type='integer'
        value='0' />
    <field
        id='otherRowScreenPos'
        type='integer'
        value='0' />

  </interface>
</component>