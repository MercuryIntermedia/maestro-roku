{
  "rootDir": "src",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
  "!**/*.spec.*"
  ],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingFolderPath": "dist",
  "diagnosticFilters": [
    {
      "src": "**/roku_modules/**/*.*"
    },
    1120
  ],
  "emitDefinitions": true,
  "plugins": [
    "maestro-roku-bsc-plugin"
  ],
  "sourceMap": false,
  "maestro": {
    "excludeFilters": [
      "**/roku_modules/**/*",
      "**/rooibos-roku/**/*"
    ]
  }
}