{
  "views": [
    {
      "_type": "mv_Rectangle",
      "size": [1920, 1080],
      "color": "~colors.background.darkPurple"
    },
    {
      "id": "bgRect",
      "_type": "mv_Rectangle",
      "translation": [0, 0],
      "color": "#6a307d"
    },
    {
      "id": "controlsGroup",
      "_type": "mv_ControlsGroup",
      "translation": [200, 200],
      "layoutMode": "vert",
      "keyDirection": "vert",
      "itemSpacings": [40],
      "observe": {
        "selectedIndex": "onButtonIndexChange"
      },
      "_initializeAfterCreatingChildren": true,
      "_children": [
        {
          "id": "button1",
          "_type": "mv_Button",
          "text": "Button 1",
          "_dataMap": {
            "text": "json.title"
          }
        },
        {
          "id": "button2",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.blue",
          "iconStyle": "~buttonScreen.icons.star",
          "text": "Reload day 0"
        },
        {
          "id": "button3",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.red",
          "text": "Item Up"
        },
        {
          "id": "button4",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.blue",
          "iconStyle": "~buttonScreen.icons.star",
          "text": "Item Down"
        },
        {
          "id": "button5",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.red",
          "text": "Use: grids"
        }
      ]
    },
    {
      "id": "controlsGroup2",
      "_type": "mv_ControlsGroup",
      "translation": [600, 200],
      "layoutMode": "vert",
      "keyDirection": "vert",
      "itemSpacings": [40],
      "_initializeAfterCreatingChildren": true,
      "_children": [
        {
          "id": "button6",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "Watch now",
          "horizAlign": "right",
          "autosize": true
        },
        {
          "id": "button7",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "Watch now",
          "horizAlign": "left",
          "autosize": true
        },
        {
          "id": "button8",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.circle",
          "iconStyle": "~buttonScreen.icons.centered_circle_play",
          "text": "",
          "size": [80, 80]
        },
        {
          "id": "button9",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "text": "Watch now",
          "horizAlign": "center",
          "autosize": true
        },
        {
          "id": "button10",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.round_white",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "Watch now",
          "horizAlign": "right",
          "autosize": true
        },
        {
          "id": "button10",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle",
          "iconStyle": "~buttonScreen.icons.check",
          "text": "Added",
          "size": [300, 50]
        },

        {
          "id": "button11",
          "_type": "mv_Button",
          "styleKey": "buttonScreen.buttons.rectangle_subtext",
          "iconStyle": "~buttonScreen.icons.play",
          "text": "START WATCHING",
          "subText": "Watch episode 1",
          "size": [350, 80],
          "autosize": true
        }
      ]
    }
  ],
  "$styles": {
    "buttonScreen": {
      "buttons": {
        "red": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.blendColor": "#aa0000",
          "focused.backgroundPoster.blendColor": "#ff0000",
          "selected.backgroundPoster.blendColor": "#ff0000",
          "normal.label.color": "#000000",
          "focused.label.color": "#ffffff",
          "selected.label.color": "#ffffff"
        },
        "blue": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.blendColor": "#0000aa",
          "focused.backgroundPoster.blendColor": "#0000ff",
          "selected.backgroundPoster.blendColor": "#0000ff",
          "normal.label.color": "#000000",
          "focused.label.color": "#ffffff",
          "selected.label.color": "#ffffff"
        },
        "round": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/controls/background-round-solid-$$RES$$.9.png",
          "focused.backgroundPoster.uri": "pkg:/images/controls/background-round-solid-$$RES$$.9.png",
          "selected.backgroundPoster.blendColor": "#0000ff",
          "focused.label.color": "#ffffff",
          "selected.label.color": "#ffffff"
        },
        "round_white": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/controls/background-round-solid-$$RES$$.9.png",
          "focused.backgroundPoster.uri": "pkg:/images/controls/background-round-solid-$$RES$$.9.png",
          "normal.backgroundPoster.blendColor": "0xFFFFFFFF",
          "focused.backgroundPoster.blendColor": "0x000000",
          "normal.label.color": "#000000",
          "focused.label.color": "#ffffff",
          "selected.label.color": "#000000"
        },
        "circle": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/button-circle.png",
          "focused.backgroundPoster.uri": "pkg:/images/button-circle.png",
          "focused.backgroundPoster.blendColor": "#0000ff",
          "normal.label.color": "#000000",
          "focused.label.color": "#ffffff",
          "selected.label.color": "#ffffff"
        },
        "rectangle": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/button-square-bg.9.png",
          "focused.backgroundPoster.uri": "pkg:/images/button-square-bg.9.png",
          "focused.backgroundPoster.blendColor": "#0000ff",
          "normal.label.color": "#ffffff",
          "focused.label.color": "#ffffff",
          "selected.label.color": "#ffffff"
        },
        "rectangle_subtext": {
          "$extends": "mv.Button.default",
          "normal.backgroundPoster.uri": "pkg:/images/button-square-bg.9.png",
          "focused.backgroundPoster.uri": "pkg:/images/button-square-bg.9.png",
          "focused.backgroundPoster.blendColor": "#0000ff",
          "normal.label.color": "#ffffff",
          "focused.label.color": "#ffffff",
          "selected.label.color": "#ffffff"
        }
      },
      "icons": {
        "star": {
          "blendColor": "#ffffff",
          "size": [48, 48],
          "translation": [5, 0],
          "uri": "pkg:/images/small-star-$$RES$$.png"
        },
        "play": {
          "size": [48, 48],
          "uri": "pkg:/images/play_icon-$$RES$$.png",
          "translation": [0, 5]
        },
        "centered_circle_play": {
          "size": [48, 48],
          "uri": "pkg:/images/play_icon-$$RES$$.png",
          "translation": [16, 16]
        },
        "check": {
          "size": [30, 30],
          "translation": [20, 5],
          "uri": "pkg:/images/check.png"
        }
      }
    }
  }
}
